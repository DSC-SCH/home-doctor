<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ImageView
		android:id="@+id/image_item"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:adjustViewBounds="true"
		android:layout_marginHorizontal="@dimen/alarm_page_imagecontainer_image_marginH"/>

	<ImageView
		android:id="@+id/image_remove"
		android:layout_width="@dimen/alarm_page_image_remove_size"
		android:layout_height="@dimen/alarm_page_image_remove_size"
		android:src="@drawable/image_remove_icon"
		android:elevation="@dimen/shadow_size"
		android:layout_gravity="top|right"
		android:layout_marginHorizontal="@dimen/alarm_page_imagecontainer_image_marginH"/>
</FrameLayout>