<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/main_theme">

		<ImageView
			android:id="@+id/back_btn"
			android:layout_width="@dimen/titlebar_back_size"
			android:layout_height="@dimen/titlebar_back_size"
			android:layout_gravity="left|center"
			android:adjustViewBounds="true"
			android:layout_marginHorizontal="@dimen/titlebar_btn_marginH"
			android:src="@drawable/ic_arrow_back_24px" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="회원가입"
			android:fontFamily="@font/bmjua"
			android:textSize="@dimen/titlebar_title_text"
			android:textColor="#FFFFFF" />
	</FrameLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/background_theme">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/join_padding">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/join_item_marginT"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text"
					android:text="아이디"/>

				<Space
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_weight="1" />

				<TextView
					android:id="@+id/join_id_warning"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:visibility="invisible"
					android:fontFamily="@font/lotte_dream_bold"
					android:textColor="@color/warning_color"
					android:textSize="@dimen/join_check_text"
					android:text="중복된 아이디입니다" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center">

				<EditText
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="@drawable/account_stroke_box"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/account_check_box"
					android:layout_marginLeft="@dimen/join_check_marginL"
					android:paddingVertical="@dimen/join_input_padding"
					android:paddingHorizontal="@dimen/join_check_paddingH"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text"
					android:text="중복확인"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/join_item_marginT"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text"
					android:text="비밀번호"/>

				<Space
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_weight="1" />

				<TextView
					android:id="@+id/join_pw_warning"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:visibility="invisible"
					android:fontFamily="@font/lotte_dream_bold"
					android:textColor="@color/warning_color"
					android:textSize="@dimen/join_check_text"
					android:text="비밀번호가 규정에 맞지 않습니다" />
			</LinearLayout>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/account_stroke_box"
				android:padding="@dimen/join_input_padding"
				android:fontFamily="@font/nanum_square_ac"
				android:textColor="@color/text_color"
				android:textSize="@dimen/join_item_text" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/join_item_marginT"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text"
					android:text="비밀번호 확인"/>

				<Space
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_weight="1" />

				<TextView
					android:id="@+id/join_pw_check_warning"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:visibility="invisible"
					android:fontFamily="@font/lotte_dream_bold"
					android:textColor="@color/warning_color"
					android:textSize="@dimen/join_check_text"
					android:text="비밀번호가 일치하지 않습니다" />
			</LinearLayout>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/account_stroke_box"
				android:padding="@dimen/join_input_padding"
				android:fontFamily="@font/nanum_square_ac"
				android:textColor="@color/text_color"
				android:textSize="@dimen/join_item_text" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/join_item_marginT"
				android:padding="@dimen/join_input_padding"
				android:fontFamily="@font/nanum_square_ac"
				android:textColor="@color/text_color"
				android:textSize="@dimen/join_item_text"
				android:text="이름"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/account_stroke_box"
				android:padding="@dimen/join_input_padding"
				android:fontFamily="@font/nanum_square_ac"
				android:textColor="@color/text_color"
				android:textSize="@dimen/join_item_text" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/join_item_marginT"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text"
					android:text="이메일"/>

				<Space
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_weight="1" />

				<TextView
					android:id="@+id/join_email_check_warning"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:visibility="invisible"
					android:fontFamily="@font/lotte_dream_bold"
					android:textColor="@color/warning_color"
					android:textSize="@dimen/join_check_text"
					android:text="이메일이 규정에 맞지 않습니다" />
			</LinearLayout>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/account_stroke_box"
				android:padding="@dimen/join_input_padding"
				android:fontFamily="@font/nanum_square_ac"
				android:textColor="@color/text_color"
				android:textSize="@dimen/join_item_text"
				android:hint="example@email.com"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/join_item_marginT"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text"
					android:text="전화번호"/>

				<Space
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_weight="1" />

				<TextView
					android:id="@+id/join_ph_warning"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:visibility="invisible"
					android:fontFamily="@font/lotte_dream_bold"
					android:textColor="@color/warning_color"
					android:textSize="@dimen/join_check_text"
					android:text="중복된 전화번호입니다" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center">

				<EditText
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="@drawable/account_stroke_box"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/account_check_box"
					android:layout_marginLeft="@dimen/join_check_marginL"
					android:paddingVertical="@dimen/join_input_padding"
					android:paddingHorizontal="@dimen/join_check_paddingH"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text"
					android:text="인증번호 전송"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/join_item_marginT"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text"
					android:text="인증번호"/>

				<Space
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_weight="1" />

				<TextView
					android:id="@+id/join_ph_remain_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/lotte_dream_bold"
					android:textColor="@color/warning_color"
					android:textSize="@dimen/join_check_text"
					android:text="남은 시간 : 3:00" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center">

				<EditText
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="@drawable/account_stroke_box"
					android:padding="@dimen/join_input_padding"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/account_check_box"
					android:layout_marginLeft="@dimen/join_check_marginL"
					android:paddingVertical="@dimen/join_input_padding"
					android:paddingHorizontal="@dimen/join_check_paddingH"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_item_text"
					android:text="인증번호 확인"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginVertical="@dimen/join_contract_marginV">

				<CheckBox
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/lotte_dream_bold"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_contract_text"
					android:text="이용약관 동의" />

				<TextView
					android:id="@+id/contract1_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/account_stroke_box"
					android:padding="@dimen/join_input_padding"
					android:minLines="3"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_contract_text" />

				<CheckBox
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/join_item_marginT"
					android:fontFamily="@font/lotte_dream_bold"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_contract_text"
					android:text="개인정보 처리 방침 동의" />

				<TextView
					android:id="@+id/contract2_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/account_stroke_box"
					android:padding="@dimen/join_input_padding"
					android:minLines="3"
					android:fontFamily="@font/nanum_square_ac"
					android:textColor="@color/text_color"
					android:textSize="@dimen/join_contract_text" />
			</LinearLayout>

			<TextView
				android:id="@+id/join_confirm_btn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:background="@drawable/account_stroke_box"
				android:paddingVertical="@dimen/join_btn_paddingV"
				android:layout_marginHorizontal="@dimen/join_btn_marginH"
				android:fontFamily="@font/lotte_dream_bold"
				android:textColor="@color/text_color"
				android:textSize="@dimen/join_btn_text"
				android:text="회원가입"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>