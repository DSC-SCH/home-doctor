<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingVertical="@dimen/history_item_paddingV"
	android:orientation="horizontal">

	<Space
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_weight="1" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		android:padding="@dimen/history_photo_padding"
		android:clipToPadding="false" >

		<ImageView
			android:layout_width="@dimen/history_photo_image_sizeH"
			android:layout_height="@dimen/history_photo_image_sizeV"
			android:background="@color/history_photo_background"
			android:elevation="@dimen/shadow_size" />

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/split_line"
			android:background="@color/split_line"
			android:layout_marginVertical="@dimen/history_photo_split_marginV"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingHorizontal="@dimen/history_photo_title_paddingH"
			android:paddingVertical="@dimen/history_photo_title_paddingV"
			android:fontFamily="@font/lotte_dream_bold"
			android:textSize="@dimen/history_photo_title_text"
			android:textColor="@color/text_color" />
	</LinearLayout>

	<Space
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_weight="1" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		android:padding="@dimen/history_photo_padding"
		android:clipToPadding="false"
		android:visibility="invisible">

		<ImageView
			android:layout_width="@dimen/history_photo_image_sizeH"
			android:layout_height="@dimen/history_photo_image_sizeV"
			android:background="@color/history_photo_background"
			android:elevation="@dimen/shadow_size" />

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/split_line"
			android:background="@color/split_line"
			android:layout_marginVertical="@dimen/history_photo_split_marginV"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingHorizontal="@dimen/history_photo_title_paddingH"
			android:paddingVertical="@dimen/history_photo_title_paddingV"
			android:fontFamily="@font/lotte_dream_bold"
			android:textSize="@dimen/history_photo_title_text"
			android:textColor="@color/text_color" />
	</LinearLayout>

	<Space
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_weight="1" />
</LinearLayout>