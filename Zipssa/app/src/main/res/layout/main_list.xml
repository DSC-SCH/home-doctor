<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background_theme"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@color/main_theme">

		<Space
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="@dimen/main_list_name_top">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginHorizontal="@dimen/main_list_name_side"
				android:src="@drawable/pill_small"
				android:adjustViewBounds="true" />
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/main_list_name"
				android:textColor="@color/main_list_text"
				android:layout_margin="@dimen/main_list_name_side"
				android:text="++이름++"/>
		</LinearLayout>

		<Space
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"/>
	</LinearLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/main_list_side"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/main_list_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			</LinearLayout>

			<TextView
				android:id="@+id/add_button"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_marginTop="30dp"
				android:background="@color/main_list_item"
				android:text="+"
				android:padding="10dp"
				android:textSize="50sp"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
