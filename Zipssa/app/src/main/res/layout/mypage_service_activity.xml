<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/main_theme">

		<ImageView
			android:id="@+id/back_btn"
			android:layout_width="@dimen/titlebar_back_size"
			android:layout_height="@dimen/titlebar_back_size"
			android:layout_gravity="left|center"
			android:adjustViewBounds="true"
			android:layout_marginHorizontal="@dimen/titlebar_btn_marginH"
			android:src="@drawable/ic_arrow_back_24px" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="고객 센터"
			android:fontFamily="@font/lotte_dream_bold"
			android:textSize="@dimen/titlebar_title_text"
			android:textColor="#FFFFFF" />
	</FrameLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="@dimen/mypage_marginV"
		android:background="@color/background_theme"
		android:orientation="vertical">

		<TextView
			android:id="@+id/contract_btn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingVertical="@dimen/mypage_menu_paddingV"
			android:paddingHorizontal="@dimen/mypage_menu_paddingH"
			android:fontFamily="@font/nanum_square_ac"
			android:textSize="@dimen/mypage_content_text"
			android:textColor="@color/text_color"
			android:text="이용약관"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/split_line"
			android:background="@color/split_line"
			android:layout_marginHorizontal="@dimen/history_split_paddingH"/>

		<TextView
			android:id="@+id/enquire_btn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingVertical="@dimen/mypage_menu_paddingV"
			android:paddingHorizontal="@dimen/mypage_menu_paddingH"
			android:fontFamily="@font/nanum_square_ac"
			android:textSize="@dimen/mypage_content_text"
			android:textColor="@color/text_color"
			android:text="문의하기"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/split_line"
			android:background="@color/split_line"
			android:layout_marginHorizontal="@dimen/history_split_paddingH"/>
	</LinearLayout>
</LinearLayout>