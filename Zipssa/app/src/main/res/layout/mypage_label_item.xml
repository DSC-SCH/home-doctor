<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/background_theme"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginVertical="@dimen/label_content_marginV"
		android:gravity="center" >

		<View
			android:id="@+id/label_color"
			android:layout_width="@dimen/label_color_size"
			android:layout_height="@dimen/label_color_size"
			android:background="@drawable/label_color"
			android:layout_marginHorizontal="@dimen/label_content_marginH"/>

		<TextView
			android:id="@+id/label_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/nanum_square_ac"
			android:textColor="@color/text_color"
			android:textSize="@dimen/label_content_text"
			android:text="이름"/>

		<Space
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1" />

		<TextView
			android:id="@+id/label_edit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/label_edit_btn"
			android:paddingVertical="@dimen/label_btn_paddingV"
			android:paddingHorizontal="@dimen/label_btn_paddingH"
			android:fontFamily="@font/nanum_square_ac"
			android:textColor="#FFFFFF"
			android:textSize="@dimen/label_content_text"
			android:text="수정"/>

		<TextView
			android:id="@+id/label_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/label_delete_btn"
			android:layout_marginHorizontal="@dimen/label_content_marginH"
			android:paddingVertical="@dimen/label_btn_paddingV"
			android:paddingHorizontal="@dimen/label_btn_paddingH"
			android:fontFamily="@font/nanum_square_ac"
			android:textColor="#FFFFFF"
			android:textSize="@dimen/label_content_text"
			android:text="삭제"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/split_line"
		android:background="@color/split_line"/>
</LinearLayout>