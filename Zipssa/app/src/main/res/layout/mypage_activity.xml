<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/mypage_background"
	android:orientation="vertical">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/main_theme">

		<ImageView
			android:id="@+id/back_btn"
			android:layout_width="@dimen/titlebar_back_size"
			android:layout_height="@dimen/titlebar_back_size"
			android:layout_gravity="left|center"
			android:adjustViewBounds="true"
			android:layout_marginHorizontal="@dimen/titlebar_btn_marginH"
			android:src="@drawable/ic_arrow_back_24px" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="마이페이지"
			android:fontFamily="@font/bmjua"
			android:textSize="@dimen/titlebar_title_text"
			android:textColor="#FFFFFF" />
	</FrameLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="@color/background_theme"
				android:layout_marginTop="@dimen/mypage_menu_distance">

				<LinearLayout
					android:id="@+id/myprofile_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_myprofile_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="마이 프로필"/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="@color/background_theme"
				android:layout_marginTop="@dimen/mypage_menu_distance">

				<LinearLayout
					android:id="@+id/notice_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_notice_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="공지사항"/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="@color/background_theme"
				android:layout_marginTop="@dimen/mypage_menu_distance">

				<LinearLayout
					android:id="@+id/sync_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_sync_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="계정 연동"/>
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/split_line"
					android:background="@color/split_line"
					android:layout_marginHorizontal="@dimen/mypage_split_marginH"/>

				<LinearLayout
					android:id="@+id/history_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_history_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="복용 내역"/>
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/split_line"
					android:background="@color/split_line"
					android:layout_marginHorizontal="@dimen/mypage_split_marginH"/>

				<LinearLayout
					android:id="@+id/label_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_label_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="라벨 관리"/>
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/split_line"
					android:background="@color/split_line"
					android:layout_marginHorizontal="@dimen/mypage_split_marginH"/>

				<LinearLayout
					android:id="@+id/setting_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_setting_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="알림 설정"/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="@color/background_theme"
				android:layout_marginTop="@dimen/mypage_menu_distance">

				<LinearLayout
					android:id="@+id/account_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_account_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="로그인"/>
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/split_line"
					android:background="@color/split_line"
					android:layout_marginHorizontal="@dimen/mypage_split_marginH"/>

				<LinearLayout
					android:id="@+id/leave_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_leave_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="탈퇴"/>
				</LinearLayout>
			</LinearLayout>


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="@color/background_theme"
				android:layout_marginTop="@dimen/mypage_menu_distance">

				<LinearLayout
					android:id="@+id/service_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_service_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="고객센터"/>
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/split_line"
					android:background="@color/split_line"
					android:layout_marginHorizontal="@dimen/mypage_split_marginH"/>

				<LinearLayout
					android:id="@+id/usage_btn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="left|center" >

					<ImageView
						android:layout_width="@dimen/mypage_icon_sizeH"
						android:layout_height="@dimen/mypage_icon_sizeV"
						android:padding="@dimen/mypage_icon_padding"
						android:src="@drawable/mypage_usage_icon"
						android:adjustViewBounds="true"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/nanum_square_ac"
						android:textSize="@dimen/mypage_content_text"
						android:textColor="@color/text_color"
						android:text="사용 방법"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
