<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginVertical="@dimen/search_recent_title_marginV"
			android:layout_marginHorizontal="@dimen/search_recent_item_padding"
			android:fontFamily="@font/lotte_dream_bold"
			android:text="검색결과 :"
			android:textSize="@dimen/search_recent_text"
			android:textColor="@color/text_color" />

		<TextView
			android:id="@+id/keyword_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginVertical="@dimen/search_recent_title_marginV"
			android:layout_marginHorizontal="@dimen/search_recent_item_padding"
			android:fontFamily="@font/lotte_dream_bold"
			android:text="키워드"
			android:textSize="@dimen/search_recent_text"
			android:textColor="@color/text_color" />
	</LinearLayout>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/search_result_container"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_marginVertical="@dimen/search_result_marginV"/>
</LinearLayout>