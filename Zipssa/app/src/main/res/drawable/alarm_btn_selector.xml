		<shape>
			<stroke android:color="#707070" android:width="1dp"/>
			<solid android:color="#B5B5B5"/>
			<corners android:radius="30dp" />
		</shape>
	</item>

	<item android:state_pressed="true" android:state_checked="false">
		<shape>
			<stroke android:color="#707070" android:width="1dp"/>
			<solid android:color="#AAAAAA"/>
			<corners android:radius="30dp" />
		</shape>
	</item>

	<item android:state_pressed="false" android:state_checked="true">
		<shape>
			<stroke android:color="#707070" android:width="1dp"/>
			<solid android:color="#AFDBF5"/>
			<corners android:radius="30dp" />
		</shape>
	</item>

	<item android:state_pressed="true" android:state_checked="true">
		<shape>
			<stroke android:color="#707070" android:width="1dp"/>
			<solid android:color="#94CDEC"/>
			<corners android:radius="30dp" />
		</shape>
	</item>
