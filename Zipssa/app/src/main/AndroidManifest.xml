<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.khnsoft.medihand">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

	<application
		android:name="com.khnsoft.medihand.GlobalApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme"
		android:usesCleartextTraffic="true">

		<meta-data
			android:name="com.kakao.sdk.AppKey"
			android:value="@string/kakao_app_key" />

		<activity android:name="com.khnsoft.medihand.MypageMyprofileActivity" />
		<activity android:name="com.khnsoft.medihand.MainActivity" />
		<activity android:name="com.khnsoft.medihand.AddAlarmActivity" />
		<activity android:name="com.khnsoft.medihand.EditAlarmActivity" />
		<activity android:name="com.khnsoft.medihand.MedicineDetailActivity" />
		<activity android:name="com.khnsoft.medihand.MypageActivity" />
		<activity
			android:name="com.khnsoft.medihand.MyAlertPopup"
			android:theme="@style/PopupTheme" />
		<activity
			android:name="com.khnsoft.medihand.AddLabelPopup"
			android:theme="@style/PopupTheme" />
		<activity
			android:name="com.khnsoft.medihand.MainItemPopup"
			android:theme="@style/PopupTheme" />
		<activity android:name="com.khnsoft.medihand.MypageNoticeActivity" />
		<activity android:name="com.khnsoft.medihand.MypageNoticeDetailActivity" />
		<activity android:name="com.khnsoft.medihand.MypageSyncActivity" />
		<activity android:name="com.khnsoft.medihand.MypageHistoryActivity" />
		<activity android:name="com.khnsoft.medihand.MypageHistoryPhotoDetailActivity" />
		<activity android:name="com.khnsoft.medihand.MypageSettingActivity" />
		<activity android:name="com.khnsoft.medihand.MypageLeavingActivity" />
		<activity android:name="com.khnsoft.medihand.MypageServiceActivity" />
		<activity android:name="com.khnsoft.medihand.MypageServiceContractActivity" />
		<activity android:name="com.khnsoft.medihand.MypageServiceEnquireActivity" />
		<activity android:name="com.khnsoft.medihand.LoginActivity" />
		<activity android:name="com.khnsoft.medihand.JoinActivity" />
		<activity android:name="com.khnsoft.medihand.PermissionActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.khnsoft.medihand.ContractActivity" />
		<activity android:name="com.khnsoft.medihand.MainListCalendarActivity" />
		<activity android:name="com.khnsoft.medihand.LoadingActivity" />
		<activity android:name="com.khnsoft.medihand.MypageLabelActivity" />
		<activity
			android:name="com.khnsoft.medihand.EditLabelPopup"
			android:theme="@style/PopupTheme" />
		<activity
			android:name="com.khnsoft.medihand.MypageSyncManagerPopup"
			android:theme="@style/PopupTheme" />
		<activity
			android:name="com.khnsoft.medihand.MypageSyncCrewPopup"
			android:theme="@style/PopupTheme" />
		<activity android:name="com.khnsoft.medihand.AuthWebActivity" />

		<receiver android:name="com.khnsoft.medihand.AlarmReceiver" >
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
		<service android:name="com.khnsoft.medihand.AlarmService" />
	</application>
</manifest>